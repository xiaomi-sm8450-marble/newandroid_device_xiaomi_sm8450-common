genrule {
    name: "qcril_config_database",
    enabled: true,
    srcs: [
        ":rildb_other_sql_files",
        ":rildb_config_sql_files",
    ],
    tool_files: [
        "generate_db.sh",
    ],
    tools: [
        "sqlite3",
    ],
    cmd: "$(location generate_db.sh) $(location sqlite3) $(out) $(in)",
    out: ["qcrilNr.db"],
}

